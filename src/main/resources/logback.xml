    <appender name="TestNG" class="com.github.sbabcoc.logback.testng.ReporterAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>





    <logger name="automation" level="DEBUG">
        <appender-ref ref="CONSOLE_error_only"/>
        <appender-ref ref="CONSOLE_warn_only"/>
        <appender-ref ref="CONSOLE_info_only"/>
        <appender-ref ref="CONSOLE_debug_only"/>
        <appender-ref ref="CONSOLE_trace_only"/>

        <appender-ref ref="TESTNG_error_only"/>
        <appender-ref ref="TESTNG_warn_only"/>
        <appender-ref ref="TESTNG_info_only"/>
        <appender-ref ref="TESTNG_debug_only"/>
        <appender-ref ref="TESTNG_trace_only"/>

    </logger>
    <logger name="ui" level="DEBUG">
        <appender-ref ref="CONSOLE_error_only"/>
        <appender-ref ref="CONSOLE_warn_only"/>
        <appender-ref ref="CONSOLE_info_only"/>
        <appender-ref ref="CONSOLE_debug_only"/>
        <appender-ref ref="CONSOLE_trace_only"/>

        <appender-ref ref="TESTNG_error_only"/>
        <appender-ref ref="TESTNG_warn_only"/>
        <appender-ref ref="TESTNG_info_only"/>
        <appender-ref ref="TESTNG_debug_only"/>
        <appender-ref ref="TESTNG_trace_only"/>

    </logger>


    <root level="ALL">
        <appender-ref ref="TestNG"/>
