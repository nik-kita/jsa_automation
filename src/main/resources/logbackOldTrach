<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_FOLDER" value="logs"/>
    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>

    <appender name="ng_error" class="com.github.sbabcoc.logback.testng.ReporterAppender">

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%boldRed([%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n%caller)</pattern>
        </encoder>
    </appender>

    <appender name="ng__warn" class="com.github.sbabcoc.logback.testng.ReporterAppender">

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%boldYellow([%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n%caller{1})</pattern>
        </encoder>
    </appender>

    <appender name="ng__info" class="com.github.sbabcoc.logback.testng.ReporterAppender">

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%green([%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n%caller{1})</pattern>
        </encoder>
    </appender>

    <appender name="ng_debug" class="com.github.sbabcoc.logback.testng.ReporterAppender">

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%boldWhite([%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n)</pattern>
        </encoder>
    </appender>

    <appender name="ng_trace" class="com.github.sbabcoc.logback.testng.ReporterAppender">

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>TRACE</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="CONSOLE_error_only" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%boldRed([%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n%caller)</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE_warn_only" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%boldYellow([%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n%caller{3})</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE_info_only" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%green([%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n%caller{1}%caller{2})</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE_debug_only" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%boldWhite([%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n%caller{1})</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE_trace_only" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>TRACE</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="main_package.engine.loggers.MyHTMLLayout">
                <pattern>%relative%thread%level%logger%msg</pattern>
            </layout>
        </encoder>
        <file>test.html</file>
    </appender>
